{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "declarationMap": false,
    "target": "esnext",
    "esModuleInterop": true,
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
    ],
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "ESNext"
    ],
    "allowJs": false
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "*.test.ts",
    "__test__",
    "/node_modules/**",
    "**/dist"
  ]
}